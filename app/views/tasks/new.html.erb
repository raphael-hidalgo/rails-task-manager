<h1>New Task</h1>
<div class='row mb-3 pb-3 border-bottom' style="width: 90%; margin: 0 auto;">
  <%= form_for(@task) do |f| %>
    <div class="col-12">
      <%= f.label :title %>
      <div class="col-12" style="width:100%;">
      <%= f.text_field :title %>
      </div>
    </div>
    <div class="col-12">
      <%= f.label :details %>
      <div class="col-12" style="width:100%;">
        <%= f.text_field :details %>
      </div>
    </div>
    <div class="col-12 btn">
      <%= f.submit %>
    </div>
  <% end %>
</div>
